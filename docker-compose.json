{
	"version": "3.9",
	"services": {
		"scholarship.users": {
			"image": "scholarship.users",
			"build": {
				"context": ".",
				"dockerfile": "Scholarship.Systems/Scholarship.Api.Users/Dockerfile"
			},
			"environment": {
				"ASPNETCORE_ENVIRONMENT": "Development",
				"ASPNETCORE_HTTP_PORTS": "8080"
			},
			"ports": [ "8080:8080" ],
			"networks": {
				"scholarship-network": {
					"aliases": [ "scholarship.users" ],
					"ipv4_address": "172.24.0.4"
				}
			},
			"depends_on": {
				"postgres": {
					"condition": "service_healthy"
				},
				"rabbitmq": {
					"condition": "service_started"
				}
			},
			"restart": "on-failure:10"
		},
		"scholarship.loans": {
			"image": "scholarship.loans",
			"build": {
				"context": ".",
				"dockerfile": "Scholarship.Systems/Scholarship.Api.Loans/Dockerfile"
			},
			"environment": {
				"ASPNETCORE_ENVIRONMENT": "Development",
				"ASPNETCORE_HTTP_PORTS": "8080"
			},
			"ports": [ "8081:8080" ],
			"networks": {
				"scholarship-network": {
					"aliases": [ "scholarship.loans" ],
					"ipv4_address": "172.24.0.5"
				}
			},
			"depends_on": {
				"postgres": {
					"condition": "service_healthy"
				},
				"rabbitmq": {
					"condition": "service_started"
				}
			},
			"restart": "on-failure:10"
		},
		"postgres": {
			"image": "postgres:latest",
			"container_name": "postgres",
			"environment": [
				"POSTGRES_NAME=postgres",
				"POSTGRES_PASSWORD=1234567890",
				"POSTGRES_DB=scholarship.loans"
			],
			"ports": [ "7272:5432" ],
			"networks": {
				"scholarship-network": {
					"aliases": [ "postgres" ],
					"ipv4_address": "172.24.0.3"
				}
			},
			"healthcheck": {
				"test": ["CMD-SHELL", "pg_isready -U postgres -d scholarship.loans"],
				"interval": "10s",
				"timeout": "5s",
				"retries": 5,
				"start_period": "10s"
			},
			"volumes": [ "./postgres-data:/var/lib/postgresql/data" ]
		},
		"rabbitmq": {
			"image": "rabbitmq:3.10.7-management",
			"container_name": "rabbitmq",
			"restart": "always",
			"environment": {
				"RABBITMQ_DEFAULT_USER": "admin",
				"RABBITMQ_DEFAULT_PASS": "1234567890"
			},
			"ports": [ "15672:15672" ],
			"volumes": [ "./rabbitmq-data:/var/lib/rabbitmq" ],
			"networks": {
				"scholarship-network": {
					"aliases": [ "rabbitmq" ],
					"ipv4_address": "172.24.0.2"
				}
			}
		}
	},
	"networks": {
		"scholarship-network": {
			"driver": "bridge",
			"ipam": {
				"driver": "default",
				"config": [
					{
						"gateway": "172.24.0.1",
						"subnet": "172.24.0.0/24"
					}
				]
			}
		}
	}
}